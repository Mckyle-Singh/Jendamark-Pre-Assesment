@page "/Operations"
@using ModelClassLibrary.IServices;
@using ModelClassLibrary.Models;
@inject IDeviceService DeviceService

<h3>Devices</h3>

<table class="table">
    <tr>
        <th>Device Id</th>
        <th>Device Name</th>
        <th>Device Type</th>
    </tr>
    <tbody>
        @foreach(var device in devices)
        {
            <tr>
                <td>@device.DeviceId</td>
                <td>@device.Name</td>
                <td>@device.DeviceType</td>
            </tr>
        }
    </tbody>
</table>
<br />

<h3>Operations</h3>

<table class="table">
    <tr>
        <th>Operation Id</th>
        <th>Operation Name</th>
        <th>Order</th>
        <th>Device Id</th>
        <th>Device Name</th>
        <th>Device Type</th>
    </tr>
    <tbody>
        @foreach (var opp in operations)
        {
            <tr>
                <td>@opp.OperationId</td>
                <td>@opp.Name</td>
                <td>@opp.OrderInWhichToPerform</td>
                <td>@opp.Device.DeviceId</td>
                <td>@opp.Device.Name</td>
                <td>@opp.Device.DeviceType</td>

            </tr>
        }
    </tbody>
</table>
<br />

@code {
    private List<Device> devices;
    private List<Operation> operations;

    protected override void OnInitialized()
    {
        devices = DeviceService.GetDevices();

        operations = DeviceService.GetOperations();
    }
}
